@{
    ViewData["Title"] = "Cadastrar - Ficha";
    Layout = "_RegisterAndEdit";
}

@model Auxiliary.Partial.PartialCollectionProfessorAluno

@*Body*@
<div>
    <section>
        <p id="Titulo">
            <i id="IconeTitulo" class="fas fa-plus"></i>
            Cadastrar Aparelho
        </p>
    </section>

    <section id="DadosAparelho" class="col-sm-8">
        <form asp-action="Create" asp-controller="Ficha" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6">
                    @* Ficha *@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <span class="ls-label-text">Identificação da Ficha</span>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="col-sm-12">
                                                <span class="ls-label-text">Professor</span>
                                                <select type="text" id="Professor" class="form-control" name="professor" required>
                                                    <option>Selecione um professor</option>
                                                    @foreach (var professor in Model.Professor)
                                                    {
                                                    <option value="@professor.IdProfessor">@professor.NomeProfessor</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="col-sm-12">
                                                <span class="ls-label-text">Aluno</span>
                                                <select type="text" id="Aluno" class="form-control" name="aluno" required>
                                                    <option>Selecione um aluno</option>
                                                    @foreach (var aluno in Model.Aluno)
                                                    {
                                                    <option value="@aluno.IdAluno">@aluno.NomeAluno</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />

                    @* Série *@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <span class="ls-label-text">Identificação da Série</span>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <span class="ls-label-text">Nome da Série</span>
                                                    <input type="text" id="NomeSerie" class="form-control" name="nomeSerie" required>
                                                </div>

                                                <div class="col-sm-6">
                                                    <span class="ls-label-text">Repetições</span>
                                                    <input type="number" id="RepeticoesSerie" class="form-control" name="repeticoesSerie" required>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <span class="ls-label-text">Observações</span>
                                                    <textarea id="ObservacoesSerie" class="form-control" name="observacoesSerie" required></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




                @* Exercício *@
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <span class="ls-label-text">Exercícios</span>
                                </div>

                                <div class="card-body">
                                    <br />

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="panel panel-primary">
                                                <div class="panel-body">
                                                    <table id="ExercicioTable" class="table table-striped table-bordered table-hover responsive" width="100%">
                                                        <thead class="thin-border-bottom">
                                                            <tr>
                                                                <th>Id</th>
                                                                <th>Nome do Exercício</th>
                                                                <th>Nome do Aparelho</th>
                                                            </tr>
                                                        </thead>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>

<div class="overlay"></div>