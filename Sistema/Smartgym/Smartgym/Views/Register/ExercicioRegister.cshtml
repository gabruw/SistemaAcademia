
@{
    ViewData["Title"] = "Cadastrar - Exercício";
    Layout = "_RegisterAndEdit";
}

@model Domain.DTO.Aparelho

@*Body*@
<div>
    <section>
        <p id="Titulo">
            <i id="IconeTitulo" class="fas fa-user-plus"></i>
            Cadastrar Exercício
        </p>
    </section>

    <section id="DadosExercicio" class="col-sm-8">
        <form asp-action="Create" asp-controller="Exercicio" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="ls-label-text">Identificação</span>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <span class="ls-label-text">Nome do Exercício</span>
                                    <input type="text" id="NomeExercicio" class="form-control" name="nomeExercicio" required>
                                </div>

                                <div class="col-sm-6">
                                    <span class="ls-label-text">Unidade</span>
                                    <select type="text" id="Aparelho" class="form-control" name="unidade" required>
                                        <option>Selecione um aparelho</option>
                                        @foreach (var aparelho in Model)
                                        {
                                            <option value="@aparelho.IdAparelho">@aparelho.NomeAparelho</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4">
                                    <span class="ls-label-text">Observação</span>
                                    <textarea id="ObservacaoExercicio" class="form-control" name="observacaoExercicio"></textarea>
                                </div>
                            </div>
                        </div>

                        <br>

                        <div class="row">
                            <div class="col-sm-12">
                                <button type="submit" id="ConfirmarCadastroExercicio" class="btn btn-primary" disabled>Confirmar</button>

                                <button type="reset" id="ResetCadastroExercicio" class="btn btn-secondary">Resetar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>
        </form>
    </section>
</div>

<div class="overlay"></div>