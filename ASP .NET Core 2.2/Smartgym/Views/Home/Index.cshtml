@{
    ViewData["Title"] ="Home";
    Layout = "_Home";
}

<div class="wrapper">
    @*Carousel*@
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/Principal/Carousel/Slide_1.jpg" alt="Primeira Imagem">
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Principal/Carousel/Slide_2.jpg" alt="Segunda Imagem">
            </div>

            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/Principal/Carousel/Slide_3.jpg" alt="Terceira Imagem">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    @*Content*@
    <div class="backgroundA">
        <div class="card-deck">
            @*Card 1*@
            <div class="card">
                <div class="cardLine"></div>
                <img class="card-img-top img-fluid zoom" src="~/img/Principal/Cards/Card_1.jpg" alt="Imagem Primeiro Card">

                <div class="text-item">
                    <p><i class="fas fa-map-marker-alt"></i> Copacabana</p>
                    <h2>Rio de Janeiro</h2>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 divCardA">
                            <h5 class="card-title">PLANO BASIC</h5>
                            <a href="Assinar.html"><p class="card-text">R$ 69,90</p></a>
                        </div>

                        <div class="col-sm-6 divCardB">
                            <h5 class="card-title">PLANO SMART</h5>
                            <a href="Assinar.html"><p class="card-text">R$ 89,90</p></a>
                        </div>
                    </div>

                    <br>

                    <p class="card-text">
                        - Ambiente arrojado
                        <br>
                        - Amplo espaço
                        <br>
                        - Tv's com Netflix
                        <br>
                        - Ar-condicionado
                        <br>
                        - Fitness Food
                    </p>
                </div>

                <p class="card-text col-sm-12">
                    <a class="btn btn-primary col-sm-12" asp-controller="Home" asp-action="Assinar">Assinar</a>
                </p>
            </div>

            @*Card 2*@
            <div class="card">
                <div class="cardLine"></div>
                <div class="zoom">
                    <img class="card-img-top img-fluid" src="~/img/Principal/Cards/Card_2.jpg" alt="Imagem Primeiro Card">
                </div>

                <div class="text-item">
                    <p><i class="fas fa-map-marker-alt"></i> Lourdes</p>
                    <h2>Belo Horizonte</h2>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 divCardA">
                            <h5 class="card-title">PLANO BASIC</h5>
                            <a href="Assinar.html"><p class="card-text">R$ 79,90</p></a>
                        </div>

                        <div class="col-sm-6 divCardB">
                            <h5 class="card-title">PLANO SMART</h5>
                            <a href="Assinar.html"><p class="card-text">R$ 99,90</p></a>
                        </div>
                    </div>

                    <br>

                    <p class="card-text">
                        - CrossFit
                        <br>
                        - Amplo espaço
                        <br>
                        - Telão e Tv's com Netflix
                        <br>
                        - Ar-condicionado
                        <br>
                        - Fitness Food
                    </p>
                </div>

                <p class="card-text col-sm-12">
                    <a class="btn btn-primary col-sm-12" asp-controller="Home" asp-action="Assinar">Assinar</a>
                </p>
            </div>

            @*Card 3*@
            <div class="card">
                <div class="cardLine"></div>
                <div class="zoom">
                    <img class="card-img-top img-fluid" src="~/img/Principal/Cards/Card_3.jpg" alt="Imagem Primeiro Card">
                </div>

                <div class="text-item">
                    <p><i class="fas fa-map-marker-alt"></i> Alto dos Passos</p>
                    <h2>Juiz de Fora</h2>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 divCardA">
                            <h5 class="card-title">PLANO BASIC</h5>
                            <a href="Assinar.html"><p class="card-text">R$ 59,90</p></a>
                        </div>

                        <div class="col-sm-6 divCardB">
                            <h5 class="card-title">PLANO SMART</h5>
                            <a href="Assinar.html"><p class="card-text">R$ 79,90</p></a>
                        </div>
                    </div>

                    <br>

                    <p class="card-text">
                        - Cadeiras de massagem
                        <br>
                        - Amplo espaço
                        <br>
                        - Tv's com Netflix
                        <br>
                        - Ar-condicionado
                        <br>
                        - Fitness Food
                    </p>
                </div>

                <p class="card-text col-sm-12">
                    <a class="btn btn-primary col-sm-12" asp-controller="Home" asp-action="Assinar">Assinar</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="overlay"></div>