
@{
    ViewData["Title"] = "Editar - Exercício";
    Layout = "_RegisterAndEdit";
}

@model Auxiliary.Partial.ViewExercicio

@*Body*@
<div>
    <section>
        <p id="Titulo">
            <i id="IconeTitulo" class="fas fa-edit"></i>
            Editar Exercício
        </p>
    </section>

    <section id="DadosExercicio" class="col-sm-8">
        <form asp-action="Edit" asp-controller="Exercicio" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="ls-label-text">Identificação</span>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <span class="ls-label-text">Nome do Exercício</span>
                                    <input type="text" id="NomeExercicio" class="form-control" name="nomeExercicio" value="@Model.ExercicioViewExercicio.NomeExercicio" required>
                                </div>

                                <div class="col-sm-6">
                                    <span class="ls-label-text">Unidade</span>
                                    <select type="text" id="Aparelho" class="form-control" name="aparelho" required>
                                        <option>Selecione um aparelho</option>
                                        @foreach (var aparelho in Model.AparelhorViewAgenda)
                                        {
                                            if(aparelho.IdAparelho == Model.ExercicioViewExercicio.AparelhoExercicio.IdAparelho)
                                            {
                                                <option value="@aparelho.IdAparelho" selected>@aparelho.NomeAparelho</option>
                                            }
                                            else
                                            {
                                                <option value="@aparelho.IdAparelho">@aparelho.NomeAparelho</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <span class="ls-label-text">Observação</span>
                                    <textarea id="ObservacaoExercicio" class="form-control" name="observacaoExercicio">@Model.ExercicioViewExercicio.ObservacaoExercicio</textarea>
                                </div>
                            </div>

                            <br>

                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" id="ConfirmarEditarExercicio" class="btn btn-primary">Confirmar</button>

                                    <button type="reset" id="ResetEditarExercicio" class="btn btn-secondary">Resetar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>

<div class="overlay"></div>

